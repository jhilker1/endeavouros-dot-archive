configuration {
    font: "Iosevka Nerd Font 14";
    modi: "window,drun,combi,powermenu:~/.dotfiles/rofi/.config/rofi/scripts/powermenu.sh";
    terminal: "alacritty";
    show-icons: true;
    icon-theme: "Papirus";
    display-drun: "î—ƒ";
    drun-display-format: "{icon} {name}";
    window-format: "({w}) {t}";
}

@import "colors/gruvbox.rasi"

* {
  background-color: @background;
  text-color: @foreground;
}

window {
  width: 55%;
  height: 60%;
  border: 2px;
  border-color: @bg-bright;
  border-radius: 4px;
  padding: 20px 10px 0px 20px;
}


